{% extends "templates/consultations-template.twig" %}

{% block form %}

    <script>
        $(document).ready(function(){
            $('select').formSelect();
        });
    </script>

    <form action="{{ path_for('consultationsDataPage') }}" method="post" class='consultations-form'>
        <div class='row'>
            <div class='col s3 offset-s3'>
                <div class="input-field">
                    <input required class='input-field' name="first_name" id="first_name" type="text" class="validate">
                    <label for="first_name">Imię</label>
                </div>
            </div>
            <div class='col s3'>
                <div class="input-field">
                    <input required id="last_name" name="last_name" type="text" class="validate">
                    <label for="last_name">Nazwisko</label>
                </div>
            </div>
        </div>
        <div class='row'>
            <div class='col s3 offset-s3'>
                <div class="input-field">
                    <input required id="email" name="email" type="email" class="validate">
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Email niepoprawny" data-success=""></span>
                </div>
            </div>
            <div class='col s3' style="margin-top: 1em">
                <select required name="subject">
                    <option class='disable' value="" disabled selected>Wybierz przedmiot</option>
                    {% for subject in subjectsList %}
                        <option value="{{ subject }}">{{ subject }}</option>
                    {% endfor %}
                    <option value="Inne">Inne</option>
                </select>
            </div>
        </div>
        <div class='row centerButton'>
            <div class='col s2 offset-s5'>
                <button class="btn waves-effect waves-light" type="submit" name="action">Wyślij
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </div>
    </form>

{% endblock %}